@{
    ViewData["Title"] = "Novo Tipo de Projeto";
}

@section styles {

    <link rel="stylesheet" href="~/css/dataTables.bootstrap4.css" />

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Novo Tipo de Projeto</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Novo Tipo de Projeto</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>



    <div class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Informações</h3>
                </div>

                <form role="form">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label id="lblNome">Nome do Tipo de Serviço</label>
                                <input type="text" class="form-control" id="txtNome" placeholder="Digite o Tipo de Serviço">
                            </div>
                            <div class="form-group col-md-3">                             
                                    <label id="lblNome">Receita</label>
                                    <input type="text" class="form-control" id="txtNome" placeholder="Digite a Receita">
                                </div>
                        </div>
                        <div class="row">


                            <div class="form-group col-md-2">
                                <label id="lblNumero">Carga Horária do Trabalho</label>
                                <input type="text" class="form-control" id="txtNumero" placeholder="Insira o Valor">
                            </div>
                            <div class="form-group col-md-2">
                                <label id="lblComplemento">Valor Hora Extra</label>
                                <input type="text" class="form-control" id="txtComplemento" placeholder="Insira o Valor">
                            </div>
                            <div class="form-group col-md-2">
                                <label id="lblBairro">Valor Hora Técnico</label>
                                <input type="text" class="form-control" id="txtBairro" placeholder="Insira o Valor">
                            </div>
                        </div>
                        <div class="row">
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label id="lblTelefoneFixo">Hora decimal</label>
                                <input type="tel" class="form-control" id="txtTelefoneFixo" placeholder="Insira o Valor">
                            </div>
                            <div class="form-group col-md-3">
                                <label id="lblCelular">Despesa</label>
                                <input type="tel" class="form-control" id="txtCelular" placeholder="Insira o Valor">
                            </div>
                            <div class="form-group col-md-2">


                            </div>
                        </div>
                        <label id="lblTelefoneFixo">Status</label>
                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                            <input type="checkbox" class="custom-control-input" id="customSwitch3">
                            <label class="custom-control-label" for="customSwitch3"><span id="switch-ativo">Ativo</span></label>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer col-md-12">
                        <div class="col-md-10 text-center">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <button type="button" class="btn btn-danger">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script src="~/lib/jquery.dataTables.js"></script>
    <script src="~/lib/dataTables.bootstrap4.js"></script>
    <script>
                    $(document).ready(function () {

                        $("#customSwitch3").click(function () {
                            if ($("#customSwitch3").is(':checked')) {
                                $("#switch-ativo").text("Ativo");
                            } else {
                                $("#switch-ativo").text("Inativo");
                            }
                        });
                    });
    </script>
}
